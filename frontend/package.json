{
  "name": "html2rss-frontend",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "astro dev --port 3001 --host",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --reporter=verbose --config vitest.unit.config.ts",
    "test:contract": "vitest run --reporter=verbose --config vitest.contract.config.ts",
    "test:ci": "npm run test:unit && npm run test:contract && npm run test:smoke",
    "test:smoke": "playwright test"
  },
  "dependencies": {
    "@astrojs/preact": "^4.1.1",
    "@astrojs/starlight": "^0.36.0",
    "astro": "^5.14.1",
    "preact": "^10.27.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/preact": "^3.2.4",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "prettier": "^3.x.x",
    "prettier-plugin-astro": "^0.x.x",
    "vitest": "^3.2.4"
  }
}
